    <!-- Tema via cookie (padr√£o: claro) -->
    <script>
        (function () {
            function getCookie(name) { const r = document.cookie.split('; ').find(x => x.startsWith(name + '=')); return r ? decodeURIComponent(r.split('=')[1]) : null; }
            function setCookie(n, v, d) { const t = new Date; t.setTime(t.getTime() + d * 864e5); document.cookie = n + '=' + encodeURIComponent(v) + '; expires=' + t.toUTCString() + '; path=/; SameSite=Lax'; }
            var theme = getCookie('theme') || 'light';
            if (!getCookie('theme')) setCookie('theme', theme, 365);
            document.documentElement.dataset.theme = theme;
        })();
